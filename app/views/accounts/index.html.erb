<div class="container">
  <div class="row">
    <div class="col-8">
      <% @posts.each do |post| %>
      <div class="post">
        <div class="post-meta"><%= post.account.username %></div>
          <% if post.image.attached? %>
          <%= image_tag post.image, class: "img img-fluid" %>
          <% end %>
        </div>
        <% end %>
    </div>
    <div class="col-4">
      <div class="account-summary">
        <p><strong><%= current_account.username %></strong></br>
        <%= current_account.full_name %></p>
      </div>
      <div class="follower-suggestions">
    
      </div>
    </div>
  </div>
</div>
