<div class="container">
  <div class="row">
    <div class="col-4">
      <%= profile_image @account, 200 %>
    </div>
    <div class="col-8 text-left">
      <div class="row">      
        <div class="col-8">
          <h1 class="float-left"><%= @account.full_name %></h1>
          <%= link_to "Edit Profile", edit_account_registration_path,class: "btn btn-muted btn-custom float-right" if can_edit_profile?(@account.id) %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <div class="profile-stats"><%= @account.posts.count %> posts</div>
        </div>
        <div class="col-4">
          <div class="profile-stats"><%= @account.total_following %> followers</div>
        </div>
        <div class="col-4">
          <div class="profile-stats"><%= @account.total_followers %> following</div>
        </div>
      </div>

      <p><%= @account.full_name %></p>
      <%= simple_format @account.description %>

      <p><%= link_to @account.website if @account.website.present? %></p>
    </div>
  </div>
  <div class="row profile-posts">
      <% @posts.each do |post| %>
        <div class="col-4">
          <div class="post post-square" style="background: url(<%= rails_blob_url(post.image) %>) no-repeat center top">
            <%= link_to post_path(post) do  %>
              <div class="post-stats">
                <div class="inner">
                  <i class="fa fa-heart"></i> <%= post.total_likes_count %>
                  <i class="fa fa-comment m-l-15"></i><%= post.total_comments_count %> 
                </div>
              </div>
            <% end %>
          </div>        
        </div>
      <%end%>
  </div>
</div>