<% @follower_suggestions.each do |account| %>
  <div class="recommended-follower">
    <div class="row">
      <div class=" col-sm-3 col-2">
        <% if account.profile_image.attached? %>
          <%= link_to profile_image(account, 40), profile_path(account.username) %>
        <% end %>
      </div>
      <div class="col-sm-9 col-10">
        <%= link_to account.username, profile_path(account.username), class:"text-dark"  %>
        <%= form_tag follow_account_path, method: :post, class: "float-right" do %>
          <%= hidden_field_tag :follow_id, account.id %>
          <%= submit_tag "Follow", class: "btn btn-info btn-sm" %>
        <% end %>
        <p class="text-muted"><%= account.created_at > 1.days.ago ? "New to Shutterbug" : "Followed by users" %></p>     
      </div>
  </div>
<% end %>