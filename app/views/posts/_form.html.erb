<%= form_for @post do |f| %>
  <%= f.label :image %><br />
  <div class="input-group mb-3">
    <div class="custom-file">
      <%= f.file_field :image, direct_upload: true, class: "custom-file-input" %>
      <%= f.label "Choose file", class: "custom-file-label" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control"%>  
  </div>
  <%= f.submit "Save Post", class: "btn btn-success" %>
<% end %>